<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="#F5F5F5">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

        <!-- Título Principal Compacto -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Formulario de Servicio"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

        <!-- Card Principal -->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                <!-- Vehículo -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Vehículo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="6dp"/>

                <Spinner
                        android:id="@+id/spinnerVehiculo"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:padding="6dp"
                        android:layout_marginBottom="4dp"/>

                <TextView
                        android:id="@+id/tvTablillaSeleccionada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tablilla: -"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:padding="6dp"
                        android:background="#F0F0F0"
                        android:layout_marginBottom="10dp"/>

                <!-- Tipo -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Tipo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="6dp"/>

                <Spinner
                        android:id="@+id/spinnerTipo"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:padding="6dp"
                        android:layout_marginBottom="10dp"/>

                <!-- Fecha -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Fecha"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="6dp"/>

                <Button
                        android:id="@+id/btnSeleccionarFecha"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="Seleccionar Fecha"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:backgroundTint="#2196F3"
                        android:layout_marginBottom="4dp"/>

                <TextView
                        android:id="@+id/tvFechaSeleccionada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No seleccionada"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                <!-- Compañía -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Compañía"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="6dp"/>

                <EditText
                        android:id="@+id/etCompania"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:hint="Ej: AutoZone"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textSize="13sp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="10dp"/>

                <!-- Costo -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Costo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="6dp"/>

                <EditText
                        android:id="@+id/etCosto"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:hint="$0.00"
                        android:inputType="numberDecimal"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textSize="13sp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="10dp"/>


                <!-- Recibo -->
                <Button
                        android:id="@+id/btnSubirRecibo"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="Subir Recibo (Opcional)"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:backgroundTint="#FF9800"
                        android:layout_marginBottom="10dp"
                        android:visibility="invisible"/>

                <!-- Errores -->
                <TextView
                        android:id="@+id/tvErrores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#D32F2F"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:background="#FFEBEE"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"/>

                <!-- Botones -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <Button
                            android:id="@+id/btnLimpiar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text=" Limpiar"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:backgroundTint="#757575"
                            android:layout_marginEnd="4dp"/>

                    <Button
                            android:id="@+id/btnGuardar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text=" Guardar"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:backgroundTint="#4CAF50"
                            android:layout_marginStart="4dp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>