<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        tools:context=".AddCar">

    <!-- 游댳 Bot칩n flotante para regresar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnBackMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_24"
            android:contentDescription="Volver"
            android:tint="@android:color/white"
            app:backgroundTint="#2196F3"
            android:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

    <!-- 游댳 T칤tulo -->
    <TextView
            android:id="@+id/titleAddCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Veh칤culo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBackMaintenance"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp" />

    <!-- 游댳 Bot칩n Guardar -->
    <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Guardar"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:onClick="guardarVehiculo"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="12dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp" />

    <!-- 游댳 Imagen del auto -->
    <ImageView
            android:id="@+id/imageViewGallery"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:src="@drawable/default_car_image"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_bg"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/titleAddCar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Bot칩n para elegir imagen -->
    <Button
            android:id="@+id/btnPickImageGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Imagen"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#2196F3"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewGallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Formulario -->
    <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnPickImageGallery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:id="@+id/layoutSelections"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="24dp"
                android:paddingBottom="32dp">

            <!-- 游댲 Veh칤culo -->
            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Veh칤culo Actual"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp" />

            <Spinner
                    android:id="@+id/spinnerMarca"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/btn_dropdown" />

            <Spinner
                    android:id="@+id/spinnerModelo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/btn_dropdown" />

            <!-- 游댲 Tablilla -->
            <TextView
                    android:id="@+id/lblLicensePlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tablilla"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textColor="#333333" />

            <EditText
                    android:id="@+id/editTextLicensePlate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="000-000"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:background="@android:drawable/edit_text"
                    android:textAllCaps="true"
                    android:layout_marginTop="8dp" />

            <!-- 游댲 Millaje -->
            <TextView
                    android:id="@+id/lblMilleage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Millaje"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textColor="#333333" />

            <EditText
                    android:id="@+id/editTextMilleage"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="000000"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginTop="8dp" />

            <!-- 游댲 A침o -->
            <TextView
                    android:id="@+id/lblYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A침o"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textColor="#333333" />

            <EditText
                    android:id="@+id/editTextYear"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="2025"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginTop="8dp" />

            <!-- 游댲 Color -->
            <TextView
                    android:id="@+id/lblColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textColor="#333333" />

            <Spinner
                    android:id="@+id/spinnerColor"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/btn_dropdown" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
