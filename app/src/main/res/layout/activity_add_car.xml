<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddCar">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnBackMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/back_button"
            android:contentDescription="'Back'"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:text="Guardar"
            android:textSize="12sp"
            android:onClick="guardarVehiculo"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:id="@+id/imageViewGallery"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="centerCrop"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonGuardar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:id="@+id/btnPickImageGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Imagen"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewGallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_scroll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="230dp" /> <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
            android:id="@+id/layoutSelections"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"> <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehículo Actual"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="@dimen/margin_default" />

        <Spinner
                android:id="@+id/spinnerMarca"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default" />
        <Spinner
                android:id="@+id/spinnerModelo"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default" />

        <TextView
                android:id="@+id/lblLicensePlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tablilla"
                android:textSize="20sp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginTop="20dp" />
        <EditText
                android:id="@+id/editTextLicensePlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="000-000"
                android:textSize="16sp"
                android:inputType="text"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginTop="12dp" android:textAllCaps="true"/>

        <TextView
                android:id="@+id/lblMilleage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Millaje"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/margin_default" />
        <EditText
                android:id="@+id/editTextMilleage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="000000"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginTop="12dp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default" />

        <TextView
                android:id="@+id/lblYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año"
                android:textSize="20sp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginTop="20dp" />
        <EditText
                android:id="@+id/editTextYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="0000"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginTop="12dp" />

        <TextView
                android:id="@+id/lblColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="20sp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginTop="20dp" />
        <Spinner
                android:id="@+id/spinnerColor"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default" />

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>