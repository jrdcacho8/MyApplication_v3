<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="8dp"
                                   app:cardCornerRadius="12dp"
                                   app:cardElevation="6dp"
                                   android:background="@android:color/white"
                                   android:id="@+id/cardMaintenance">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="8dp">

        <TextView
                android:id="@+id/textMantenimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cambio de Aceite - Título Largo para Probar Auto-ajuste"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:paddingBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:textSize="16sp" />

        <ImageView
                android:id="@+id/imageMantenimiento"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen de maintenance"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintTop_toBottomOf="@+id/textMantenimiento"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                tools:srcCompat="@tools:sample/avatars" />

        <TextView
                android:id="@+id/lblMileageDue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Próximo Servicio:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageMantenimiento"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"

                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@+id/imageMantenimiento"
                app:layout_constraintBottom_toTopOf="@+id/txtMileageDue"
                tools:text="Próximo Millaje: (Label)" android:visibility="visible"/>

        <TextView
                android:id="@+id/txtMileageDue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#D32F2F"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageMantenimiento"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"

                app:layout_constraintTop_toBottomOf="@+id/lblMileageDue"
                app:layout_constraintBottom_toTopOf="@+id/lblDueDate"
        />

        <TextView
                android:id="@+id/lblDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Próxima Fecha:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageMantenimiento"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"

                app:layout_constraintTop_toBottomOf="@+id/txtMileageDue"
                app:layout_constraintBottom_toTopOf="@+id/txtDueDate"
                tools:text="Próximo Fecha: (Label)"/>

        <TextView
                android:id="@+id/txtDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#D32F2F"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageMantenimiento"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"

                app:layout_constraintTop_toBottomOf="@+id/lblDueDate"
                app:layout_constraintBottom_toBottomOf="@+id/imageMantenimiento"
                android:visibility="visible"/>

        <androidx.constraintlayout.widget.Group
                android:id="@+id/group_maintenance_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="lblMileageDue,txtMileageDue,lblDueDate,txtDueDate"
                tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>