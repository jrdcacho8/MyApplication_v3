<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="8dp"
                                   app:cardCornerRadius="12dp"
                                   app:cardElevation="6dp"
                                   android:background="@android:color/white"
                                   android:id="@+id/cardMaintenance">

    <androidx.constraintlayout.motion.widget.MotionLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            app:layoutDescription="@xml/item_mantenimiento_xml_linearlayout2_scene">

        <TextView
                android:id="@+id/textMantenimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cambio de Aceite - TÃ­tulo Largo para Probar Auto-ajuste"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end"

                android:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:textSize="12sp" />

        <ImageView
                android:id="@+id/imageMantenimiento"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen de maintenance"

                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.35"

                app:layout_constraintTop_toBottomOf="@+id/textMantenimiento"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                tools:srcCompat="@tools:sample/avatars" />

        <TextView
                android:id="@+id/lblDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vence:"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@+id/imageMantenimiento"
                app:layout_constraintStart_toEndOf="@+id/imageMantenimiento"
                android:layout_marginStart="16dp"/>

        <TextView
                android:id="@+id/txtDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15/10/2025"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/lblDueDate"
                app:layout_constraintStart_toStartOf="@+id/lblDueDate"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                tools:textColor="#D32F2F" />

        <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/imageMantenimiento"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/spacer_bottom"/>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</androidx.cardview.widget.CardView>