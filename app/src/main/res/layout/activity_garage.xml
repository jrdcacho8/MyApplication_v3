<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        tools:context=".GarageActivity">



    <TextView

            android:id="@+id/txtGarageName"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Garaje"

            android:textSize="24sp"

            android:textStyle="bold"

            android:layout_marginTop="24dp"

            android:layout_marginStart="24dp"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"/>



    <ImageButton

            android:id="@+id/imageButtonAddCar"

            android:layout_width="57dp"

            android:layout_height="44dp"

            android:src="@android:drawable/ic_menu_add"

            android:background="@color/white"

            android:onClick="handleCrearAuto"

            android:contentDescription="Añadir nuevo vehículo"

            android:layout_marginTop="24dp"

            android:layout_marginEnd="24dp"

            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent" tools:src="@drawable/addnewbutton"/>

    <androidx.constraintlayout.widget.Guideline

            android:id="@+id/guideline_top_rv"

            android:orientation="horizontal"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            app:layout_constraintGuide_begin="72dp"/>



    <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyclerViewAutos"

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:paddingTop="8dp"

            android:paddingBottom="8dp"

            android:clipToPadding="false"

            tools:listitem="@layout/item_auto"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="@id/guideline_top_rv"

            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar" app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintVertical_bias="0.0"/>

    <LinearLayout

            android:id="@+id/bottom_navigation_bar"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:paddingVertical="8dp"

            android:gravity="center"

            android:background="@android:color/white"

            android:elevation="8dp"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent">



        <ImageButton

                android:id="@+id/btnGarage"

                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                app:srcCompat="@drawable/garajebutton"

                android:minHeight="48dp"

                android:background="?attr/selectableItemBackgroundBorderless"

                android:contentDescription="Garaje"/>



        <ImageButton

                android:id="@+id/btnTip"

                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                app:srcCompat="@drawable/consejobutton"

                android:minHeight="48dp"

                android:background="?attr/selectableItemBackgroundBorderless"

                android:contentDescription="Consejos"/>



        <ImageButton

                android:id="@+id/btnInforme"

                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                app:srcCompat="@drawable/informebutton"

                android:minHeight="48dp"

                android:background="?attr/selectableItemBackgroundBorderless"

                android:contentDescription="Informe"/>



        <ImageButton

                android:id="@+id/btnAccount"

                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                app:srcCompat="@drawable/perfilbutton"

                android:minHeight="48dp"

                android:background="?attr/selectableItemBackgroundBorderless"

                android:contentDescription="Perfil"/>



    </LinearLayout>

    <TextView

            android:text="Add Car"

            android:layout_width="64dp"

            android:layout_height="25dp" android:id="@+id/lblAddNewCar"

            android:textStyle="bold"

            app:layout_constraintTop_toBottomOf="@+id/imageButtonAddCar"

            app:layout_constraintEnd_toEndOf="@+id/imageButtonAddCar"

            app:layout_constraintStart_toStartOf="@+id/imageButtonAddCar"

            android:layout_marginBottom="638dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>