<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".ServicesSelect">

    <!-- App bar -->
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#CFE3FF"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:title="Informe"
            app:titleCentered="true"
            app:titleTextColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenido desplazable -->
    <ScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintBottom_toTopOf="@id/bottomNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Título -->
            <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Garaje"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"/>

            <!-- Selector de vehículo -->
            <TextView
                    android:id="@+id/tvLabelVehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona un vehículo"
                    android:textSize="13sp"
                    android:textColor="#99000000"
                    android:layout_marginBottom="6dp"/>

            <Spinner
                    android:id="@+id/spinnerVehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_spinner_outline"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="8dp"
                    android:layout_marginBottom="16dp"
                    tools:listitem="@android:layout/simple_spinner_dropdown_item"
                    tools:entries="@array/mock_vehiculos"/>

            <!-- Tarjeta del vehículo seleccionado -->
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardVehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#FFBBBBBB">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                    <ImageView
                            android:id="@+id/ivAuto"
                            android:layout_width="96dp"
                            android:layout_height="64dp"
                            android:src="@drawable/default_car_image"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/app_name" />

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                        <TextView
                                android:id="@+id/tvEntrega"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Entregas #1"
                                android:textSize="12sp"
                                android:textColor="#99000000"/>

                        <TextView
                                android:id="@+id/tvTituloAuto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Toyota Tacoma 2015"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="2dp"/>

                        <TextView
                                android:id="@+id/tvSubtitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tablilla 940-956"
                                android:textSize="13sp"
                                android:textColor="#99000000"
                                android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botones con borde -->
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddMaintenance"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Añadir Mantenimiento realizado"
                    android:textAllCaps="false"
                    android:layout_marginBottom="12dp"
                    app:strokeColor="#3F51B5"
                    app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateReport"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDF de Mantenimientos"
                    android:textAllCaps="false"
                    app:strokeColor="#3F51B5"
                    app:strokeWidth="1dp"/>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:itemIconTint="@color/selector_bottom_nav_tint"
            app:itemTextColor="@color/selector_bottom_nav_tint"
            app:menu="@menu/menu_bottom_nav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
