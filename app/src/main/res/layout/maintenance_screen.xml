<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/main_layout">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/edit_button" />

    <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mantenimientos"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/editButton"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:id="@+id/imageMaintenance"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2.5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:srcCompat="@drawable/generalmaintenance" />

    <TextView
            android:id="@+id/txtNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="Nota Educativa del Mantenimiento"
            android:textAlignment="center"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageMaintenance"
            android:layout_marginTop="24dp"/>

    <!-- 1. Fecha Reciente (Last Maintenance) -->
    <TextView
            android:id="@+id/lblLastMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Fecha Reciente:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNote"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtLastDateMaintenance"
            android:layout_marginTop="24dp"/>

    <EditText
            android:id="@+id/txtLastDateMaintenance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:enabled="true"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lblLastMaintenance"
            app:layout_constraintTop_toBottomOf="@+id/txtNote"
            android:layout_marginTop="16dp"
            android:focusable="false"/>

    <!-- 2. Próxima Fecha (Next Maintenance) - Correctly constrained below Last Date -->
    <TextView
            android:id="@+id/lblNextMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Próxima Fecha:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblLastMaintenance"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtNextMaintenance"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/txtNextMaintenance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:enabled="true"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lblNextMaintenance"
            app:layout_constraintTop_toBottomOf="@+id/txtLastDateMaintenance"
            android:layout_marginTop="8dp"
            android:focusable="false"/>

    <!-- 3. lblSelectDate / txtSelectDate - CONSTRAINED BELOW Next Maintenance -->
    <TextView
            android:id="@+id/lblSelectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Fecha Selección:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblNextMaintenance"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtSelectDate"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    <EditText
            android:id="@+id/txtSelectDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:enabled="true"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lblSelectDate"
            app:layout_constraintTop_toBottomOf="@+id/txtNextMaintenance"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:visibility="gone"/>

    <!-- 4. lblDateMaintenance / txtDateMaintenance - CONSTRAINED BELOW Select Date -->
    <TextView
            android:id="@+id/lblDateMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Otra Fecha Maint.:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblSelectDate"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtDateMaintenance"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    <EditText
            android:id="@+id/txtDateMaintenance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:enabled="true"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lblDateMaintenance"
            app:layout_constraintTop_toBottomOf="@+id/txtSelectDate"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:visibility="gone"/>

    <Button
            android:id="@+id/btnUpdateMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDateMaintenance"
            android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
