<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/main"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        tools:context=".MainActivity"

        android:background="@color/white" tools:visibility="visible">



    <FrameLayout

            android:layout_width="0dp"

            android:layout_height="200dp" android:id="@+id/frameLayout" app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">



        <ImageView

                android:id="@+id/imageView"

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                app:srcCompat="@drawable/img_inicio"

                android:scaleType="centerCrop"/>



        <View

                android:layout_width="match_parent"

                android:layout_height="60dp"

                android:layout_gravity="top"

                android:background="@drawable/top_gradient"/>

    </FrameLayout>



    <TextView

            android:id="@+id/clickCounter"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="AL DÍA"

            android:textSize="24sp"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginTop="16dp"/>

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:attr/progressBarStyleLarge"/>

    <EditText

            android:id="@+id/editTextEmailAddress"

            android:layout_width="337dp"

            android:layout_height="54dp"

            android:hint="Correo Electrónico"

            android:inputType="textEmailAddress"

            app:layout_constraintTop_toBottomOf="@id/clickCounter"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginHorizontal="32dp"

            android:layout_marginTop="24dp" />

    <EditText

            android:id="@+id/editTextPassword"

            android:layout_width="348dp"

            android:layout_height="50dp"

            android:hint="Contraseña"

            android:inputType="textPassword"

            app:layout_constraintTop_toBottomOf="@+id/editTextEmailAddress"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginHorizontal="32dp"

            android:layout_marginTop="24dp" />

    <Button

            android:id="@+id/accessButton"

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:text="Acceso"

            android:onClick="handleAccess"

            app:layout_constraintTop_toBottomOf="@id/editTextPassword"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginHorizontal="64dp"

            android:layout_marginTop="24dp"

    />

    <Button

            android:id="@+id/createButton"

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:text="Crear Cuenta"

            android:onClick="handleCreateAccount"

            app:layout_constraintTop_toBottomOf="@id/accessButton"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginHorizontal="64dp"

            android:layout_marginTop="24dp"

            android:textColor="#3F51B5" app:layout_constraintHorizontal_bias="0.64"

            style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
            android:id="@+id/google_signIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Iniciar con Google"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#DB4437"
            android:textColor="@color/white"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/createButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="24dp"/>

    <androidx.constraintlayout.widget.Guideline

            android:orientation="horizontal"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content" android:id="@+id/guideline"

            app:layout_constraintGuide_begin="200dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>